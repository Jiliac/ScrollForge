// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum AgentType {
  orchestrator
  faction_turn
  world_advance
  narrator
}

enum AgentLogStatus {
  running
  completed
  failed
  refused
}

model Game {
  id            String         @id @default(cuid())
  filesDir      String         @unique
  createdAt     DateTime       @default(now())

  images        Image[]
  conversations Conversation[]
}

model Image {
  id           String   @id @default(cuid())
  gameId       String?
  game         Game?    @relation(fields: [gameId], references: [id], onDelete: Cascade)
  slug         String
  file         String
  prompt       String
  tags         String   // JSON array stored as string
  referencedIn String
  createdAt    DateTime @default(now())

  @@unique([gameId, slug])
  @@index([gameId])
}

model Conversation {
  id        String     @id @default(cuid())
  gameId    String?
  game      Game?      @relation(fields: [gameId], references: [id], onDelete: Cascade)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  messages  Message[]
  agentLogs AgentLog[]

  @@index([gameId])
}

model Message {
  id             String       @id
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String       // "user" | "assistant"
  parts          String       // JSON string of UIMessage parts
  createdAt      DateTime     @default(now())
}

model AgentLog {
  id             String         @id @default(cuid())
  conversationId String
  conversation   Conversation   @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  agentType      AgentType
  status         AgentLogStatus @default(running)

  input          String?        // JSON: args passed to agent
  output         String?        // JSON: result/decision
  error          String?        // Error message if failed

  startedAt      DateTime       @default(now())
  completedAt    DateTime?
  durationMs     Int?

  @@index([conversationId])
  @@index([conversationId, agentType])
}
