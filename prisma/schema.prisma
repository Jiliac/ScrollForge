// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AgentType {
  orchestrator
  faction_turn
  world_advance
  narrator
  archivist
}

enum AgentLogStatus {
  running
  completed
  failed
  refused
}

model User {
  id            String         @id // Supabase Auth UUID
  email         String         @unique
  name          String?
  createdAt     DateTime       @default(now())

  games         Game[]
  conversations Conversation[]
}

model Game {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  description String?
  config      Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  files         GameFile[]
  images        Image[]
  conversations Conversation[]

  @@index([userId])
}

model GameFile {
  id        String   @id @default(cuid())
  gameId    String
  game      Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  path      String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([gameId, path])
  @@index([gameId])
}

model Image {
  id           String   @id @default(cuid())
  gameId       String
  game         Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  slug         String
  file         String
  prompt       String
  tags         String   // JSON array stored as string
  referencedIn String
  createdAt    DateTime @default(now())

  @@unique([gameId, slug])
  @@index([gameId])
}

model Conversation {
  id        String     @id @default(cuid())
  gameId    String
  game      Game       @relation(fields: [gameId], references: [id], onDelete: Cascade)
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  messages  Message[]
  agentLogs AgentLog[]

  @@index([gameId])
  @@index([userId])
}

model Message {
  id             String       @id
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String       // "user" | "assistant"
  parts          String       // JSON string of UIMessage parts
  createdAt      DateTime     @default(now())

  @@index([conversationId])
}

model AgentLog {
  id             String         @id @default(cuid())
  conversationId String
  conversation   Conversation   @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  agentType      AgentType
  status         AgentLogStatus @default(running)

  input          String?        // JSON: args passed to agent
  output         String?        // JSON: result/decision
  error          String?        // Error message if failed

  startedAt      DateTime       @default(now())
  completedAt    DateTime?
  durationMs     Int?

  @@index([conversationId])
  @@index([conversationId, agentType])
}
